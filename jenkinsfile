pipeline {
    agent any

    stages {
        stage("Checkout") {
            steps {
                checkout scm
            }
        }

        stage("Install Dependencies") {
            steps {
                sh 'npm install' // Fixed command to install npm dependencies
            }
        }

        stage("Run Tests") {
            steps {
                sh 'npm test' // Run tests
            }
        }

        stage("Build") {
            steps {
                sh 'npm run build' // Build the application
            }
        }

        stage("Build Docker Image") {
            steps {
                sh 'docker build -t my-node-app:1.0 .' // Correct docker build command
            }
        }
    }
}
